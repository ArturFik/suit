
<div class="list-group">
  {% for category_1 in categories %} 
  {% if (category_1['category_id'] == category_id) %} 
  <a href="{{ category_1.href }}" class="list-group-item active">{{ category_1.name }}</a>
  {% if (category_1['children']) %} 
  {% for category_2 in category_1['children'] %} 
  {% if (category_2['category_id'] == child_id) %} 
  <a href="{{ category_2.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;- {{ category_2.name }}</a>
  {% if (category_2['children']) %} 
    {% for category_3 in category_2['children'] %} 
	{% if (category_3['category_id'] == subchild_id) %} 
    <a href="{{ category_3.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- {{ category_3.name }}</a>
	{% else %} 
	<a href="{{ category_3.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- {{ category_3.name }}</a>
	{% endif %} 
    {% endfor %} 
  {% endif %} 
  {% else %} 
  <a href="{{ category_2.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;- {{ category_2.name }}</a>
  {% endif %} 
  {% endfor %} 
  {% endif %} 
  {% else %} 
  <a href="{{ category_1.href }}" class="list-group-item">{{ category_1.name }}</a>
  {% endif %} 
  {% endfor %} 
</div>
		