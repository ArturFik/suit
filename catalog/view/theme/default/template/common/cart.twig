<div id="cart">
	<a href="#" data-toggle="dropdown" data-loading-text="{{ text_loading }}" title="{{ title_cart_header }}" class="dropdown-toggle">
		{# <i class="fa fa-shopping-cart"></i>  #}
		<img src="images/i-bag.svg">
		<span id="cart-total">{{ text_items }}</span>
	</a>
	<ul class="dropdown-menu pull-right">
		{% if products or vouchers %}
			<li>
				<div class="cart-block">
					{% for product in products %}
						<div class="cart-row">
							<div class="cart-row__name">
								<a href="{{ product.href }}">{{ product.name }}</a>
								{% if product.option %}
									{% for option in product.option %}
										<br/>
										-
										<small>{{ option.name }} {{ option.value }}</small>
									{% endfor %}
								{% endif %}
								{% if product.recurring %}
									<br/>
									-
									<small>{{ text_recurring }} {{ product.recurring }}</small>
								{% endif %}
							</div>
              <div class="cart-row__thumb-quantity-remove">
                {% if product.thumb %}
                <div class="cart-row__thumb">
                  <a href="{{ product.href }}">
                    <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail"/>
                  </a>
                </div>
                <div class="cart-row__quantity">x{{ product.quantity }}</div>
                <div class="cart-row__total">{{ product.total }}</div>
                <div class="cart-row__remove">
                  <button class="cart-row__remove_button" onclick="cart.remove('{{ product.cart_id }}');"><img src="/catalog/view/theme/default/images/i-trash.svg"></button>
                </div>
                {% endif %}
              </div>
						</div>


            {# <div class="cart-row hidden">
							<div class="text-center">
								{% if product.thumb %}
									<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail"/></a>
								{% endif %}
							</div>
							<div class="text-left">
