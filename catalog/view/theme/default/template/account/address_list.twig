{{ header }}
<div id="account-address" class="container">
  <div class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    {% if loop.last %}
    <span>{{ breadcrumb.text }}</span>
    {% else %}
    <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><img src="images/i-separator.svg">
    {% endif %}
    {% endfor %}
  </div>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}

  {{ column_left }}

  <div id="content" class="lk">

    <div class="title"><h1>{{ heading_title }}</h1></div>

    <div class="lk__content">
      <div class="prd-tab">
        <div class="prd-tab__bl">

          {{ content_top }}
  
          <div class="prd-tab__content">
            <div class="prd-tab__item">

              {% if addresses %}
              <div class="addresses-list">
                {% for result in addresses %}
                <form action="{{ result.delete }}" class="addresses-list__row" method="post" enctype="multipart/form-data" id="form-address-{{ result.address_id }}">
                  <div class="addresses-list__row_left">{{ result.address }}</div>
                  <div class="addresses-list__row_right">
                    <div class="addresses-list__row_buttons">
                      <a href="{{ result.update }}" class="btn btn-blue">{{ button_edit }}</a>
                      <a href="{{ result.delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-red" onclick="return confirm('{{ text_confirm }}')">{{ button_delete }}</a>
                    </div>
                  </div>
                </form>
                {% endfor %}
              </div>
              {% else %}
              <p>{{ text_empty }}</p>
              {% endif %}

            </div>
          </div>
          {{ content_bottom }}
        </div>
      </div>
    </div>

    <div class="buttons clearfix">
      <div class="pull-left"><a href="{{ add }}" class="btn btn-blue">{{ button_new_address }}</a></div>
    </div>

  </div>

  {{ column_right }}
</div>
{{ footer }}