{{ header }}
<div id="account-order" class="container">
  <div class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    {% if loop.last %}
    <span>{{ breadcrumb.text }}</span>
    {% else %}
    <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><img src="images/i-separator.svg">
    {% endif %}
    {% endfor %}
  </div>
  {{ column_left }}

  <div id="content" class="lk">

    <div class="title"><h1>{{ heading_title }}</h1></div>

    <div class="lk__content">
      <div class="prd-tab">
        <div class="prd-tab__bl">

          {{ content_top }}
  
          <div class="prd-tab__content">
            <div class="prd-tab__item prd-tab__item_orders">

              {% if orders %}
              <div class="orders-list">
                <div class="orders-list__head">
                  <div class="orders-list__head_item order-id">{{ column_order_id }}</div>
                  <div class="orders-list__head_item customer">{{ column_customer }}</div>
                  <div class="orders-list__head_item product">{{ column_product }}</div>
                  <div class="orders-list__head_item status">{{ column_status }}</div>
                  <div class="orders-list__head_item total">{{ column_total }}</div>
                  <div class="orders-list__head_item date">{{ column_date_added }}</div>
                  <div class="orders-list__head_item action"></div>
                </div>
                <div class="orders-list__body">
                  {% for order in orders %}
                    <div class="orders-list__row">
                      <div class="orders-list__row_item order-id">#{{ order.order_id }}</div>
                      <div class="orders-list__row_item customer">{{ order.name }}</div>
                      <div class="orders-list__row_item product">{{ order.products }}</div>
                      <div class="orders-list__row_item status">{{ order.status }}</div>
                      <div class="orders-list__row_item total">{{ order.total }}</div>
                      <div class="orders-list__row_item date">{{ order.date_added }}</div>
                      <div class="orders-list__row_item action"><a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-blue order-detail">
                        <svg width="21px" height="21px" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" xmlns:xlink="http://www.w3.org/1999/xlink" enable-background="new 0 0 512 512"><g><g fill="#fff"><path d="m34,256l26.2,26.2c108,108 283.7,108 391.7,0l26.1-26.2-26.2-26.2c-108-108-283.7-108-391.7,0l-26.1,26.2zm222,126.2c-75.8,0-151.6-28.9-209.3-86.6l-32.9-32.9c-3.7-3.7-3.7-9.7 0-13.5l32.9-32.9c115.4-115.4 303.2-115.4 418.6,0l32.9,32.9c3.7,3.7 3.7,9.7 0,13.5l-32.9,32.9c-57.7,57.7-133.5,86.6-209.3,86.6z"/><path d="m256,183.5c-40,0-72.5,32.5-72.5,72.5s32.5,72.5 72.5,72.5c40,0 72.5-32.5 72.5-72.5s-32.5-72.5-72.5-72.5zm0,164c-50.5,0-91.5-41.1-91.5-91.5 0-50.5 41.1-91.5 91.5-91.5s91.5,41.1 91.5,91.5c0,50.5-41,91.5-91.5,91.5z"/></g></g></svg>
                      </a></div>
                    </div>
                    
                  {% endfor %}
                </div>
              </div>

              {{ pagination }}

              {% endif %}

            </div>
          </div>
          {{ content_bottom }}
        </div>
      </div>
    </div>

