<div class="simplecheckout-block" id="simplecheckout_login" {{ has_error ? 'data-error="true"' : '' }}>
    <div class="simplecheckout-block-content">
        <div id="simple_login_header">
            {# <img style="cursor:pointer;" data-onclick="close" src="{{ additional_path }}catalog/view/image/close.png"> #}
            <svg width="15" height="15" data-onclick="close" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 94.926 94.926" style="enable-background:new 0 0 94.926 94.926;" xml:space="preserve"><g><path d="M55.931,47.463L94.306,9.09c0.826-0.827,0.826-2.167,0-2.994L88.833,0.62C88.436,0.224,87.896,0,87.335,0 c-0.562,0-1.101,0.224-1.498,0.62L47.463,38.994L9.089,0.62c-0.795-0.795-2.202-0.794-2.995,0L0.622,6.096 c-0.827,0.827-0.827,2.167,0,2.994l38.374,38.373L0.622,85.836c-0.827,0.827-0.827,2.167,0,2.994l5.473,5.476 c0.397,0.396,0.936,0.62,1.498,0.62s1.1-0.224,1.497-0.62l38.374-38.374l38.374,38.374c0.397,0.396,0.937,0.62,1.498,0.62 s1.101-0.224,1.498-0.62l5.473-5.476c0.826-0.827,0.826-2.167,0-2.994L55.931,47.463z"/></g></svg>
        </div>
        {% if error_login %}
        <div class="alert alert-danger simplecheckout-warning-block">{{ error_login }}</div>
        {% endif %}
        <fieldset>
            <div class="form-group">
                <label class="control-label">{{ entry_email }}</label>
                <input class="form-control" data-onkeydown="detectEnterAndLogin" type="text" name="email" value="{{ email }}" /></label>
            </div>
            <div class="form-group">
                <label class="control-label">{{ entry_password }}</label>
                <input class="form-control" data-onkeydown="detectEnterAndLogin" type="password" name="password" value="" /></label>
                <a href="{{ forgotten }}">{{ text_forgotten }}</a>
            </div>
            <div class="simplecheckout_button_login-block">
                <a id="simplecheckout_button_login" data-onclick="login" class="btn btn-blue"><span>{{ button_login }}</span></a>
            </div>
        </fieldset>
    </div>
</div>