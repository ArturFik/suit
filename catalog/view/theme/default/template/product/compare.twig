{{ header }}
<div id="product-compare" class="container">
  <div class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    {% if loop.last %}
    <span>{{ breadcrumb.text }}</span>
    {% else %}
    <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><img src="images/i-separator.svg">
    {% endif %}
    {% endfor %}
  </div>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}

  {{ column_left }}

  <div id="content" class="">
    {{ content_top }}
    <div class="title"><h1>{{ heading_title }}</h1></div>
    {% if products %}
    <div class="table-block table-block-compare">
      <table class="table-block__table table-order-info-compare">
        {# <thead>
          <tr>
            <td colspan="{{ products|length + 1 }}"><div class="td-block__content"><span class="fw600">{{ text_product }}</span></div></td>
          </tr>
        </thead> #}
        <tbody>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_name }}</span></div></td>
            {% for product in products %}
            <td><div class="td-block__content"><a href="{{ product.href }}">{{ product.name }}</a></div></td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_image }}</span></div></td>
            {% for product in products %}
            <td class="text-left">
              {% if product.thumb %} 
              <div class="td-block__content">
                <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail td-block__content_img" />
              </div>
              {% endif %}
            </td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_price }}</span></div></td>
            {% for product in products %}
            <td>
              <div class="td-block__content">{% if product.price %}
              {% if not product.special %}
              {{ product.price }}
              {% else %} <strike>{{ product.price }}</strike> {{ product.special }}
              {% endif %}
              {% endif %}
              </div>
            </td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_model }}</span></div></td>
            {% for product in products %}
            <td><div class="td-block__content">{{ product.model }}</div></td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_manufacturer }}</span></div></td>
            {% for product in products %}
            <td><div class="td-block__content">{{ product.manufacturer }}</div></td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_availability }}</span></div></td>
            {% for product in products %}
            <td><div class="td-block__content">{{ product.availability }}</div></td>
            {% endfor %}
          </tr>
          {% if review_status %}
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_rating }}</span></div></td>
            {% for product in products %}
            <td class="rating">
              <div class="td-block__content">
              {% for i in 1..5 %}
              {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {%
                else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i
                    class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
                {% endfor %} <br />
                {{ product.reviews }}
              </div>
            </td>
            {% endfor %}
          </tr>
          {% endif %}
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_summary }}</span></div></td>
            {% for product in products %}
            <td class="description"><div class="td-block__content">{{ product.description }}</div></td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_weight }}</span></div></td>
            {% for product in products %}
            <td><div class="td-block__content">{{ product.weight }}</div></td>
            {% endfor %}
          </tr>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ text_dimension }}</span></div></td>
            {% for product in products %}
            <td><div class="td-block__content">{{ product.length }} x {{ product.width }} x {{ product.height }}</div></td>
            {% endfor %}
          </tr>
        </tbody>

        {% for attribute_group in attribute_groups %}
        <thead>
          <tr>
            <td colspan="{{ products|length + 1 }}"><div class="td-block__content"><span class="fw600">{{ attribute_group.name }}</span></div></td>
          </tr>
        </thead>
        {% for key, attribute in attribute_group.attribute %}
        <tbody>
          <tr>
            <td><div class="td-block__content"><span class="fw600">{{ attribute.name }}</span></div></td>
            {% for product in products %}
            {% if product.attribute[key] %}
            <td><div class="td-block__content">{{ product.attribute[key] }}</div></td>
            {% else %}
            <td><div class="td-block__content"></div></td>
            {% endif %}
            {% endfor %}
          </tr>
        </tbody>
        {% endfor %}
        {% endfor %}
        <tr>
          <td></td>
          {% for product in products %}
          <td>
            <div class="td-block__content product-compare-buttons">
              <input type="button" value="{{ button_cart }}" class="btn btn-blue" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');" />
              <a href="{{ product.remove }}" class="btn btn-red">{{ button_remove }}</a>
            </div>
          </td>
          {% endfor %}
        </tr>
      </table>
    </div>
    {% else %}
    <div class="compare-empty">
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-left"><a href="{{ continue }}" class="btn btn-blue">{{ button_continue }}</a></div>
      </div>
    </div>
    
    {% endif %}
    {{ content_bottom }}
  </div>
  {{ column_right }}
</div>
{{ footer }}