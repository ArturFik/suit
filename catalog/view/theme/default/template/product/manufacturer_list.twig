{{ header }}
<div id="product-manufacturer" class="container">
  <div class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    {% if loop.last %}
    <span>{{ breadcrumb.text }}</span>
    {% else %}
    <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><img src="images/i-separator.svg">
    {% endif %}
    {% endfor %}
  </div>

  {{ column_left }}
  <div id="content" class="manufacturer-list">
    {{ content_top }}

    <div class="catalog-header">
      <div class="catalog-header__content">
        <div class="catalog-header__left">
          <div class="title">
            <h1>{{ heading_title }}</h1>
          </div>
        </div>
      </div>
    </div> 


    {% if categories %}
    <div class="alphabetical-index">
      <div class="alphabetical-index__title">{{ text_index }}</div>
      <div class="alphabetical-index__body">
        {% for category in categories %}
        {% if not loop.first %}&nbsp;&nbsp;&nbsp;{% endif %}<a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a>
        {% endfor %} 
      </div>
    </div>
    
    <div class="manufacturer-list">
    {% for category in categories %}
    <div class="manufacturer-list__item">
    <h2 id="{{ category.name }}">{{ category.name }}</h2>
    {% if category.manufacturer %}
    {% for manufacturers in category.manufacturer|batch(4) %}
    <div class="row"> {% for manufacturer in manufacturers %}
      <div class="col-sm-3"><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></div>
      {% endfor %}
    </div>
    {% endfor %}
    {% endif %}
    </div>
    {% endfor %}
    </div>
    {% else %}
    <p>{{ text_empty }}</p>
    <div class="buttons clearfix">
      <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
    </div>
    {% endif %}
    {{ content_bottom }}
  </div>
  {{ column_right }}
</div>
{{ footer }}