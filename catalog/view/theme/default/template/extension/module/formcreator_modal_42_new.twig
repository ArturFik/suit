<script type="text/javascript">
$('#form-formcreator{{ module_id }}').on('submit', function (e) {
    e.preventDefault();
    var that = $(e.target);
    
    // Показываем индикатор загрузки
    var loadingHtml = '<div class="loading-indicator" style="text-align: center; padding: 20px;">' +
                     '<div class="spinner-border text-primary" role="status">' +
                     '<span class="sr-only">Обработка...</span>' +
                     '</div>' +
                     '<p>Обрабатываем ваш файл...</p>' +
                     '</div>';
    
    $('#feedbackModal{{ module_id }} .modal-body').prepend(loadingHtml);
    
    // Подготавливаем данные формы с файлом
    var formData = new FormData(this);
    
    $.ajax({
        url: 'index.php?route=extension/module/formcreator/send',
        type: 'post',
        data: formData,
        processData: false,
        contentType: false,
        dataType: 'json',
        success: function (data) {
            // Убираем индикатор загрузки
            $('.loading-indicator').remove();
            
            if (data['error']) {
                $('#feedbackModal{{ module_id }} .text-danger').remove();
                var error = $('<div class="alert alert-danger">' + data['error'] + '</div>');
                $('#feedbackModal{{ module_id }} .modal-body').prepend(error);
                return;
            }
            
            // Убираем старые сообщения об ошибках
            $('#feedbackModal{{ module_id }} .text-danger, #feedbackModal{{ module_id }} .alert-danger').remove();
            
            // Показываем успешное сообщение
            if (data['telegram_link']) {
                var successHtml = '<div class="alert alert-success">' +
                                 '<h4>Файл успешно обработан!</h4>' +
                                 '<p>Ваш расчет готов. Получите его в Telegram:</p>' +
                                 '<a href="' + data['telegram_link'] + '" class="btn btn-primary" target="_blank">' +
                                 'Получить расчет в Telegram' +
                                 '</a>' +
                                 '</div>';
                $('#feedbackModal{{ module_id }} .modal-body').prepend(successHtml);
            }
            
            alertForm({ form: that, msg: data['success'] });
            
            // Очищаем форму
            that[0].reset();
            $('.result-button-file').html('');
        },
        error: function(xhr, status, error) {
            // Убираем индикатор загрузки
            $('.loading-indicator').remove();
            
            // Показываем ошибку
            $('#feedbackModal{{ module_id }} .text-danger, #feedbackModal{{ module_id }} .alert-danger').remove();
            var errorHtml = '<div class="alert alert-danger">' +
                           'Произошла ошибка при обработке запроса. Попробуйте еще раз.' +
                           '</div>';
            $('#feedbackModal{{ module_id }} .modal-body').prepend(errorHtml);
        }
    });
});

function alertForm(alert) {
    $('#feedbackModal{{ module_id }}').modal('hide');
    $('#request-pay-msg').modal('show');
}

$('#request-pay-msg .modal__close, #request-pay-msg .modal__close_button').on('click', function(){
    $('#request-pay-msg').modal('hide');
});
</script>
