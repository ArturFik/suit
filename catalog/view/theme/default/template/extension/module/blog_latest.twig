<div class="article-list">
    <div class="title">
      <h2>{{ heading_title_latest }}</h2>
    </div>
    <div class="article-list__content">
        {% for blog in posts %} 
      <a href="{{ blog.href }}" class="article-list__item">
        {% if blog.image  and  thumb %} 
        <div class="article-list__img"><img src="{{ blog.image }}"></div>
        {% endif %} 
        <div class="article-list__title">{{ blog.title }}</div>
        {% if not characters == '0' %} 
        <div class="article-list__text">{{ blog.description }}</div>
        {% endif %} 
      </a>
      {% endfor %} 
    </div>
  </div>



