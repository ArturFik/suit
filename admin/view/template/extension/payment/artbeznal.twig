            <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <input name="{{ pname }}_rs_{{ language['language_id'] }}" type="text" size="20" value="{% if _context['artpr_rs_' ~ language.language_id] %}{{ _context['artpr_rs_' ~ language.language_id] }}{% endif %}" /><br /> 
              {% if (error_rs) %}
              <span class="error">{{ error_rs }}</span>
              {% endif %}{% endfor %}</td>
          </tr>
          <tr>
            <td><span class="required">*</span> {{ entry_bankuser }}</td>
            <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <input name="{{ pname }}_bankuser_{{ language['language_id'] }}" type="text" size="20" value="{% if _context['artpr_bankuser_' ~ language.language_id] %}{{ _context['artpr_bankuser_' ~ language.language_id] }}{% endif %}" /><br /> 
              {% if (error_bankuser) %}
              <span class="error">{{ error_bankuser }}</span>
              {% endif %}{% endfor %}</td>
          </tr>
          <tr>
            <td><span class="required">*</span> {{ entry_bik }}</td>
            <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <input name="{{ pname }}_bik_{{ language['language_id'] }}" type="text" size="20" value="{% if _context['artpr_bik_' ~ language.language_id] %}{{ _context['artpr_bik_' ~ language.language_id] }}{% endif %}" /><br /> 
              {% if (error_bik) %}
              <span class="error">{{ error_bik }}</span>
              {% endif %}{% endfor %}</td>
          </tr>
          <tr>
            <td><span class="required">*</span> {{ entry_ks }}</td>
            <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <input name="{{ pname }}_ks_{{ language['language_id'] }}" type="text" size="20" value="{% if _context['artpr_ks_' ~ language.language_id] %}{{ _context['artpr_ks_' ~ language.language_id] }}{% endif %}" /><br /> 
              {% if (error_ks) %}
              <span class="error">{{ error_ks }}</span>
              {% endif %}{% endfor %}</td>
          </tr>
          <tr>
            <td><span class="required">*</span> {{ entry_ur }}</td>
            <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <input name="{{ pname }}_ur_{{ language['language_id'] }}" type="text" size="20" value="{% if _context['artpr_ur_' ~ language.language_id] %}{{ _context['artpr_ur_' ~ language.language_id] }}{% endif %}" /><br /> 
              {% if (error_ur) %}
              <span class="error">{{ error_ur }}</span>
              {% endif %}{% endfor %}</td>
          </tr>
          <tr>
              <td width="25%">{{ entry_footer }}</td>
              <td>{% if (artpr_footer == 'simple') %} 
                <input type="radio" name="{{ pname }}_footer" value="custom" id="tab-footer-custom" />
                {{ text_footer_custom }} 
                <input type="radio" name="{{ pname }}_footer" value="simple" id="tab-footer-simple" checked="checked" />
                {{ text_footer_simple }} 
                <input type="radio" name="{{ pname }}_footer" value="0" id="tab-footer-hard" />
                {{ text_footer_hard }} 
                {% elseif (artpr_footer == 'custom') %}  
                <input type="radio" name="{{ pname }}_footer" value="custom" id="tab-footer-custom" checked="checked" />
                {{ text_footer_custom }} 
                <input type="radio" name="{{ pname }}_footer" value="simple" id="tab-footer-simple" />
                {{ text_footer_simple }} 
                <input type="radio" name="{{ pname }}_footer" value="0" id="tab-footer-hard" />
                {{ text_footer_hard }} 
                {% else %} 
                <input type="radio" name="{{ pname }}_footer" value="custom" id="tab-footer-custom" />
                {{ text_footer_custom }} 
                <input type="radio" name="{{ pname }}_footer" value="simple" id="tab-footer-simple"/>
                {{ text_footer_simple }} 
                <input type="radio" name="{{ pname }}_footer" value="0" id="tab-footer-hard" checked="checked" />
                {{ text_footer_hard }} 
                {% endif %}</td>
            </tr>
            <tr class="footer-simple" {% if (artpr_footer != 'simple') %}style="display:none;"{% endif %}>
              <td width="25%">{{ entry_footer_simple }}</td>
              <td class="text-left"><a href="" id="thumb-image_footer_simple" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_footer_simple }}" alt="" title="" data-placeholder="{{ placeholder }}"/></a> <input type="hidden" name="{{ pname }}_footer_simple" value="{{ artpr_footer_simple }}" id="input-image_footer_simple"/></td>
            </tr>
            <tr class="footer-hard" {% if (artpr_footer) %}style="display:none;"{% endif %}>
              <td>{{ entry_ruk_name }}</td>
              <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <textarea name="{{ pname }}_ruk_name_{{ language['language_id'] }}" cols="50" rows="1">{% if _context['artpr_ruk_name_' ~ language.language_id] %}{{ _context['artpr_ruk_name_' ~ language.language_id] }}{% endif %}</textarea><br />
                {% endfor %}</td>
            </tr>
            <tr class="footer-hard" {% if (artpr_footer) %}style="display:none;"{% endif %}>
              <td>{{ entry_ruk_fio }}</td>
              <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <textarea name="{{ pname }}_ruk_fio_{{ language['language_id'] }}" cols="50" rows="1">{% if _context['artpr_ruk_fio_' ~ language.language_id] %}{{ _context['artpr_ruk_fio_' ~ language.language_id] }}{% endif %}</textarea><br />
                {% endfor %}</td>
            </tr>
            <tr class="footer-hard" {% if (artpr_footer) %}style="display:none;"{% endif %}>
              <td>{{ entry_buh_name }}</td>
              <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <textarea name="{{ pname }}_buh_name_{{ language['language_id'] }}" cols="50" rows="1">{% if _context['artpr_buh_name_' ~ language.language_id] %}{{ _context['artpr_buh_name_' ~ language.language_id] }}{% endif %}</textarea><br />
                {% endfor %}</td>
            </tr>
            <tr class="footer-hard" {% if (artpr_footer) %}style="display:none;"{% endif %}>
              <td>{{ entry_buh_fio }}</td>
              <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <textarea name="{{ pname }}_buh_fio_{{ language['language_id'] }}" cols="50" rows="1">{% if _context['artpr_buh_fio_' ~ language.language_id] %}{{ _context['artpr_buh_fio_' ~ language.language_id] }}{% endif %}</textarea><br />
                {% endfor %}</td>
            </tr>
            <tr class="footer-custom" {% if (artpr_footer != 'custom') %}style="display:none;"{% endif %}>
              <td>{{ entry_footer_custom }}</td>
              <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <textarea name="{{ pname }}_footer_custom_{{ language['language_id'] }}" cols="50" rows="1">{% if _context['artpr_footer_custom_' ~ language.language_id] %}{{ _context['artpr_footer_custom_' ~ language.language_id] }}{% endif %}</textarea><br />
                {% endfor %}</td>
            </tr>
          </table>
        </div>
        <div class="tab-pane" id="tab-look">
          <table class="table">
            <thead>
               <h4>{{ text_look }}</h4>
            </thead>
            <tr>
              <td width="25%">{{ entry_name_tab }}</td>
              <td>{% if (artpr_name_attach) %} 
                <input type="radio" name="{{ pname }}_name_attach" value="1" checked="checked" />
                {{ text_my }} 
                <input type="radio" name="{{ pname }}_name_attach" value="0" />
                {{ text_default }} 
                {% else %} 
                <input type="radio" name="{{ pname }}_name_attach" value="1" />
                {{ text_my }} 
                <input type="radio" name="{{ pname }}_name_attach" value="0" checked="checked" />
                {{ text_default }} 
                {% endif %}</td>
            </tr>
            <tr>
              <td>{{ entry_name }}</td>
              <td>{% for language in languages %}<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language['name'] }}" style="vertical-align:top;"/> <textarea name="{{ pname }}_name_{{ language['language_id'] }}" cols="50" rows="1">{% if _context['artpr_name_' ~ language.language_id] %}{{ _context['artpr_name_' ~ language.language_id] }}{% endif %}</textarea><br />
                {% endfor %}</td>
            </tr>
            <tr>
              <td>{{ entry_geo_zone }}</td>
              <td><select name="{{ pname }}_geo_zone_id">
                  <option value="0">{{ text_all_zones }}</option>
                  {% for geo_zone in geo_zones %} 
                  {% if (geo_zone['geo_zone_id'] == artpr_geo_zone_id) %} 
                  <option value="{{ geo_zone['geo_zone_id'] }}" selected="selected">{{ geo_zone['name'] }}</option>
