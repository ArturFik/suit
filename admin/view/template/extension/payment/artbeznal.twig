            {% set i = 0 %} {% for currency in currencies %} {% set i = i + 1 %} 
                <input name="{{ pname }}_currency_pay[]" id="artpr_currency_pay_{{ i }}" value="{{ currency['code'] }}" {% if (artpr_currency_pay is defined) %} {% for artpr_curr in artpr_currency_pay %} {% if (artpr_curr == currency['code']) %} {{ 'checked' }} {% endif %}{% endfor %}{% endif %} type="checkbox" class="checkboxc" onclick="toggleParentCheckedCur(this.checked)">&nbsp<label for="artpr_currency_pay_{{ i }}">{{ currency['title'] }}</label><br/>
