                      <label for="artpr_status_off_{{ i }}"><input name="{{ pname }}_status_off[]" id="artpr_status_off_{{ i }}" value="{{ order_status['order_status_id'] }}" {% if (artpr_status_off is defined) %} {% for artpr_statof in artpr_status_off %} {% if (artpr_statof == order_status['order_status_id']) %} {{ 'checked' }} {% endif %}{% endfor %}{% endif %} type="checkbox" > {{ order_status['name'] }}</label>
                  </div>
                  {% endfor %}
              </div>
            </div>
            </td>
          </tr>
          <tr>
            <td><span class="required">*</span> {{ entry_bank }}</td>
