              <td>{{ entry_minpay }}</td>
              <td><input type="text" name="{{ pname }}_minpay" value="{{ artpr_minpay }}" ></td>
            </tr>
            <tr>
              <td>{{ entry_maxpay }}</td>
              <td><input type="text" name="{{ pname }}_maxpay" value="{{ artpr_maxpay }}" ></td>
            </tr>
            <tr>
            <td>{{ entry_currency_pay }}</td>
