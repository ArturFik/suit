{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid dashboard">
    <div class="row flex">
      <div class="col-sm-8 col-xs-12 flex">
        <div class="panel panel-default block">
          <div class="panel-heading">
            <div class="pull-right"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-calendar"></i> <i class="caret"></i></a>
              <ul id="range" class="dropdown-menu dropdown-menu-right">
                <li><a href="day">{{ text_day }}</a></li>
                <li><a href="week">{{ text_week }}</a></li>
                <li class="active"><a href="month">{{ text_month }}</a></li>
                <li><a href="year">{{ text_year }}</a></li>
              </ul>
            </div>
            <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> {{ text_analytics }}</h3>
          </div>
          <div class="panel-body">
            <div id="chart-sale" style="width: 100%; height: 150px;"></div>
          </div>
        </div>
      </div>
       <div class="col-sm-4 col-xs-12 flex">
          <div class="panel panel-default block">
            <div class="panel-heading"><h3><i class="fa fa-cog"></i> {{ text_control }}</h3></div>
              <div class="panel-body">
                <ul class="list-unstyled">
                  {% for menu in menus %}
                    <li><a href="{{ menu.href }}"><i class="fa {{ menu.icon }}"></i> {{ menu.name }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
        </div>
    </div>
    <div class="row dash-cols">
      <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="tile tile-one">
          <div class="tile-heading clearfix">
            <span>{{ text_total_subscribers }}</span> <i class="fa fa-user"></i>
          </div>
          <div class="tile-body text-center">
            <h2>{{ total_subscribers }}</h2>
          </div>
          <div class="tile-footer text-center"><a href="{{ href_subscribers }}">{{ text_view_more }}</a></div>
        </div>
      </div>  
      <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="tile tile-two">
          <div class="tile-heading clearfix">
              <span>{{ text_total_unverify_subscribers }}</span> 
              <i class="fa fa-exclamation"></i>
          </div>
          <div class="tile-body text-center">
            <h2>{{ total_unverify_subscribers }}</h2>
          </div>
          <div class="tile-footer text-center">
            <a href="{{ href_unvefrify_subscribers }}">{{ text_view_more }}</a>
          </div>
        </div>
      </div>  
      <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="tile tile-three">
          <div class="tile-heading clearfix">
            <span>{{ text_total_verify_subscribers }}</span> 
            <i class="fa fa-check"></i>
          </div>
          <div class="tile-body text-center">
            <h2>{{ total_unverified_subscribers }}</h2>
          </div>
          <div class="tile-footer text-center"><a href="{{ href_verify_unsubscribers }}">{{ text_view_more }}</a></div>
        </div>
      </div> 
      <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="tile tile-four">
          <div class="tile-heading clearfix">
            <span>{{ text_total_unsubscribers }}</span>
            <i class="fa fa-chain-broken "></i>
           </div>
          <div class="tile-body text-center">
            <h2>{{ total_unsubscribers }}</h2>
          </div>
          <div class="tile-footer text-center"><a href="{{ href_unsubscribers }}">{{ text_view_more }}</a></div>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="tile tile-five">
          <div class="tile-heading clearfix">
            <span>{{ text_total_declines }}</span>
            <i class="fa fa-times"></i>
           </div>
          <div class="tile-body text-center">
            <h2>{{ total_declines }}</h2>
          </div>
          <div class="tile-footer text-center"><a href="{{ href_unsubscribers }}">{{ text_view_more }}</a></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-shopping-cart"></i> {{ heading_recent }}</h3>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <td class="text-left">{{ column_name }}</td>
                  <td class="text-left">{{ column_email }}</td>
                  <td class="text-left">{{ column_account }}</td>
                  <td class="text-left">{{ column_status }}</td>
                  <td class="text-left">{{ column_ip }}</td>
                  <td class="text-left">{{ column_date_added }}</td>
                </tr>
              </thead>
              <tbody>
                {% if subscribers %}
                {% for subscriber in subscribers %}
                <tr>
                  <td class="text-left">{{ subscriber.name }}</td>
                  <td class="text-left">{{ subscriber.email }}</td>
                  <td class="text-left"><label class="label label-{{ subscriber.account_class }}">{{ subscriber.account_register }}</label></td>
                  <td class="text-left"><label class="label label-{{ subscriber.status_class }}">{{ subscriber.status }}</label></td>
                  <td class="text-left">{{ subscriber.ip }}</td>
                  <td class="text-left">{{ subscriber.date_added }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="6">{{ text_no_results }}</td>
                </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="view/javascript/jquery/flot/jquery.flot.js"></script> 
<script type="text/javascript" src="view/javascript/jquery/flot/jquery.flot.resize.min.js"></script>
<script type="text/javascript"><!--
$('#range a').on('click', function(e) {
  e.preventDefault();
  
  $(this).parent().parent().find('li').removeClass('active');
  
  $(this).parent().addClass('active');
  
  $.ajax({
    type: 'get',
    url: 'index.php?route=newsletter/dashboard/chart&user_token={{ user_token }}&range=' + $(this).attr('href'),
    dataType: 'json',
    success: function(json) {
                        if (typeof json['subscriber'] == 'undefined') { return false; }
      var option = {  
        shadowSize: 0,
        colors: ['#1065D2'],
        bars: { 
          show: true,
          fill: true,
          lineWidth: 1
        },
        grid: {
          backgroundColor: '#FFFFFF',
          hoverable: true
        },
        points: {
          show: false
        },
        xaxis: {
          show: true,
          ticks: json['xaxis']
        },
        yaxis: {
          autoscaleMargin: 1,
          min: 0,
          // position: 'right',
          max: 20,
    }
      }
      
      $.plot('#chart-sale', [json['subscriber']], option); 
          
      $('#chart-sale').bind('plothover', function(event, pos, item) {
        $('.tooltip').remove();
        
        if (item) {
          $('<div id="tooltip" class="tooltip top in"><div class="tooltip-arrow"></div><div class="tooltip-inner">' + item.datapoint[1].toFixed(2) + '</div></div>').prependTo('body');
          
          $('#tooltip').css({
            position: 'absolute',
            left: item.pageX - ($('#tooltip').outerWidth() / 2),
            top: item.pageY - $('#tooltip').outerHeight(),
            pointer: 'cusror'
          }).fadeIn('slow');  
          
          $('#chart-sale').css('cursor', 'pointer');    
          } else {
          $('#chart-sale').css('cursor', 'auto');
        }
      });
    },
    error: function(xhr, ajaxOptions, thrownError) {
       alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
    }
  });
});

$('#range .active a').trigger('click');
//--></script> 
