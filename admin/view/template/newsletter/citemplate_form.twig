{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-citemplate" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-citemplate" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab"><i class="fa fa-file-o"  aria-hidden="true"></i> {{ tab_general }}</a></li>
            <li><a href="#tab-product" data-toggle="tab"><i class="fa fa-plug" aria-hidden="true"></i> {{ tab_product }}</a></li>
            <li><a href="#tab-coupon" data-toggle="tab"><i class="fa fa-gift" aria-hidden="true"></i> {{ tab_coupon }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
              </div>
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab">
                    <img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content col-sm-9">
                {% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_title }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="citemplate_description[{{ language.language_id }}][title]" value="{{ citemplate_description[language.language_id] ? citemplate_description[language.language_id].title }}" placeholder="{{ entry_title }}" id="input-title{{ language.language_id }}" class="form-control" />
                      {% if error_title[language.language_id] %}
                      <div class="text-danger">{{ error_title[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-description{{ language.language_id }}">{{ entry_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="citemplate_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ citemplate_description[language.language_id] ? citemplate_description[language.language_id].description }}</textarea>
                      {% if error_description[language.language_id] %}
                      <div class="text-danger">{{ error_description[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
                </div>                
                {% endfor %}
              </div>
              <div class="col-sm-3">
                  <br/>
                <table class="table table-bordered">
                  <thead>
                    <tr><td>{{ const_names }}</td><td>{{ const_short_codes }}</td>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>{{ const_logo }}</td><td>{LOGO}</td>
                    </tr>
                    <tr>
                      <td>{{ const_store_name }}</td><td>{STORE_NAME}</td>
                    </tr>
                    <tr>
                      <td>{{ const_store_link }}</td><td>{STORE_LINK}</td>
                    </tr>
                    <tr>
                      <td>{{ const_name }}</td><td>{NAME}</td>
                    </tr>
                    <tr>
                      <td>{{ const_email }}</td><td>{EMAIL}</td>
                    </tr>
                    <tr>
                      <td>{{ const_link_confirm }}</td><td>{CONFIRMATION_LINK}</td>
                    </tr>
                    <tr>
                      <td>{{ const_link_unsubscribe }}</td><td>{UNSUBSCRIBE_LINK}</td>
                    </tr>
                    <tr>
                      <td>{{ const_products }}</td><td>{PRODUCTS}</td>
                    </tr>
                    <tr>
                      <td>{{ const_coupon_code }}</td><td>{COUPON_CODE}</td>
                    </tr>
                  </tbody>
                </table>
              </div><div class="clearfix"></div>
              
            </div>
            <div class="tab-pane" id="tab-product">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-product"><span data-toggle="tooltip" title="{{ help_product }}">{{ entry_product }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="product_name" value="" placeholder="{{ entry_product }}" id="input-product" class="form-control" />
                  <div id="citemplate-product" class="well well-sm" style="height: 150px; overflow: auto;">
                    {% for product in products %}
                    <div id="citemplate-product{{ product.product_id }}"><i class="fa fa-minus-circle"></i> {{ product.name }}
                      <input type="hidden" name="product[]" value="{{ product.product_id }}" />
                    </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-image-size">{{ entry_image_size }}</label>
                <div class="col-sm-10">
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="input-group">
                      <input type="text" name="image_width" value="{{ image_width }}" placeholder="{{ text_width }}" id="input-image-size-width" class="form-control" />
                      <span class="input-group-btn">
                        <button type="button" class="btn btn-primary"><i class="fa fa-arrows-h"></i></button>
                      </span>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="input-group">
                      <input type="text" name="image_height" value="{{ image_height }}" placeholder="{{ text_height }}"  id="input-image-size-height" class="form-control" />
                      <span class="input-group-btn">
                        <button type="button" class="btn btn-primary"><i class="fa fa-arrows-v"></i></button>
                      </span>
                      </div>
                    </div>
                  </div>
                  {% if error_image_size %}
                  <div class="text-danger">{{ error_image_size }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label">{{ entry_display_price }}</label>
                <div class="col-sm-10">
                  <label class="radio-inline">
                    {% if display_price %}
                    <input type="radio" name="display_price" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="display_price" value="1" />
                    {{ text_yes }}
                    {% endif %}
                  </label>
                  <label class="radio-inline">
                    {% if not display_price %}
                    <input type="radio" name="display_price" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="display_price" value="0" />
                    {{ text_no }}
                    {% endif %}
                  </label>
                  {% if error_display_price %}
                  <div class="text-danger">{{ error_display_price }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-coupon">
              <div class='form-group"'>
                <label class="col-sm-2 control-label" for="input-coupon"><span data-toggle="tooltip" title="{{ help_coupon }}">{{ entry_coupon }}</span></label>
                <div class="col-sm-10">
                  <select name="coupon_id" class="form-control"> 
                    <option value="">{{ text_select }}</option>
                    {% for coupon in coupons %}
                    {% if coupon.coupon_id == coupon_id %}
                    <option value="{{ coupon.coupon_id }}" selected="selected">{{ coupon.name }}</option>
                    {% else %}
                    <option value="{{ coupon.coupon_id }}">{{ coupon.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
